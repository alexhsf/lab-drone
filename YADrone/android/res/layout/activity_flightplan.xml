<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical" >

    <Button
        android:id="@+id/buttonTakeOffAndLand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="@string/flightplan1"
        android:onClick="onButtonClick" />

    <Button
        android:id="@+id/buttonTakeOffSpinAndLand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="@string/flightplan2"
        android:onClick="onButtonClick" />

    <Button
        android:id="@+id/buttonTakeOffFly2MetersLand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="@string/flightplan3"
        android:onClick="onButtonClick" />

    <Button
        android:id="@+id/buttonTakeOffFly2mSpinFlyBackLand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="@string/flightplan4"
        android:onClick="onButtonClick" />

</LinearLayout>